{% extends '@Contao/block_searchable' %}

{% block content %}

    <div class="ratio ratio-{{ playerAspectRatio }}">
        {% if playerType == 'youtube' %}
            <iframe src="//www.youtube.com/embed/{{ movieId }}?rel=0{% if autoplay %}&autoplay=1{% endif %}" allowfullscreen></iframe>
        {% endif %}

        {% if playerType == 'vimeo' %}
            <iframe src="//player.vimeo.com/video/{{ movieId }}?rel=0{% if autoplay %}&autoplay=1{% endif %}" allowfullscreen></iframe>
        {% endif %}

        {% if playerType == 'dropbox' %}
            <iframe src="//dl.dropbox.com/{{ movieId }}" allowfullscreen></iframe>
        {% endif %}
    </div>

    {% if not caption is empty %}
        <div class="videoCaption">{{ caption }}</div>
    {% endif %}

{% endblock %}
